<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/promptView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/words_signed"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/promptView"
        app:layout_constraintEnd_toEndOf="@id/promptView"
        app:layout_constraintTop_toTopOf="@id/promptView" />

    <ScrollView
        android:id="@+id/signedPromptsListContainer"
        android:layout_width="1000dp"
        android:layout_height="650dp"
        app:layout_constraintStart_toStartOf="@id/promptView"
        app:layout_constraintEnd_toEndOf="@id/promptView"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="@id/promptView">

        <LinearLayout
            android:id="@+id/signedPromptsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="@id/signedPromptsListContainer"
            app:layout_constraintEnd_toEndOf="@id/signedPromptsListContainer"
            app:layout_constraintTop_toTopOf="@id/signedPromptsListContainer"
            app:layout_constraintBottom_toBottomOf="@id/signedPromptsListContainer" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
