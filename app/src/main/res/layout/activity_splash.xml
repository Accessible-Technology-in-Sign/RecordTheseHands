<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splash.HomeScreenActivity">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/back_button"
        android:src="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="@string/app_name"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/versionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:textColor="@color/dark_gray"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/header"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/loadingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/loading"
        android:textSize="30sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/mainGroup"
        android:layout_width="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="sessionInformation, statusHeader, statusInformation, statisticsHeader, statisticsInformation"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/sessionInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/header"
        app:layout_constraintEnd_toEndOf="@id/header"
        app:layout_constraintTop_toBottomOf="@id/header">

        <TextView
            android:id="@+id/deviceIdLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginEnd="6dp"
            android:text="@string/id_label"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/deviceIdBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="italic"
            android:text="@string/id_error"
            android:textSize="18sp"
            android:paddingRight="20dp" />

        <TextView
            android:id="@+id/usernameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="6dp"
            android:textStyle="bold"
            android:text="@string/username_label"
            android:textSize="18sp"
            android:paddingLeft="20dp" />

        <TextView
            android:id="@+id/usernameBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="italic"
            android:text="@string/username_error"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/statusHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:text="@string/status_header"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sessionInformation" />

    <LinearLayout
        android:id="@+id/statusInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/header"
        app:layout_constraintEnd_toEndOf="@id/header"
        app:layout_constraintTop_toBottomOf="@id/statusHeader">

        <TextView
            android:id="@+id/internetConnectionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/internet_status"
            android:textColor="@color/alert_yellow"
            android:textStyle="italic"
            android:textSize="20sp"
            android:paddingRight="50dp" />

        <TextView
            android:id="@+id/serverConnectionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/server_status"
            android:textColor="@color/alert_yellow"
            android:textStyle="italic"
            android:textSize="20sp"
            android:paddingLeft="50dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/statisticsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/statistics_header"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusInformation" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/statisticsInformation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statisticsHeader"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/promptsProgressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prompts_completed"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/sectionNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            android:paddingTop="15dp"
            android:paddingEnd="8dp" />

        <TextView
            android:id="@+id/completedAndTotalPromptsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ratio"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/sectionNameText"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/tutorialProgressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tutorial_mode"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/sectionNameText"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/totalProgressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_progress"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/promptsProgressText"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/totalProgressCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ratio"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/promptsProgressText"
            app:layout_constraintStart_toEndOf="@id/guideline"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/recordingsProgressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_recordings"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/totalProgressText"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/recordingCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/counter"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/totalProgressText"
            app:layout_constraintStart_toEndOf="@id/guideline"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/recordingTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_time"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/recordingsProgressText"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/recordingTimeParsedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/counter"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/recordingsProgressText"
            app:layout_constraintStart_toEndOf="@id/guideline"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/sessionCounterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_sessions"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/recordingTimeText"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/sessionCounterBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/counter"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/recordingTimeText"
            app:layout_constraintStart_toEndOf="@id/guideline"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/sectionsCompletedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sections_completed"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/sessionCounterText"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            android:paddingTop="15dp" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/sectionsCompletedLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            app:layout_constraintTop_toBottomOf="@id/sessionCounterText"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="15dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/uploadButton">

        <TextView
            android:id="@+id/uploadProgressBarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="Upload Progress: "
            android:textSize="18sp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/uploadProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:indeterminate="false"
            android:max="100"
            android:min="0"
            android:visibility="gone"
            android:progressDrawable="@drawable/progress_bar" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/uploadButton"
        style="@style/SecondaryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload_button"
        android:layout_marginBottom="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/startButton"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startButton"
        style="@style/PrimaryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/start_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/switchPromptsButton"
        style="@style/SecondaryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/switch_prompts"
        app:layout_constraintStart_toEndOf="@id/startButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <LinearLayout
        android:id="@+id/tutorialModeContainer"
        android:layout_marginBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/uploadButton">

        <TextView
            android:id="@+id/tutorialModeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tutorial_mode"
            android:textSize="32sp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/exitTutorialModeButton"
            style="@style/SecondaryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit Tutorial"
            android:enabled="true"
            android:visibility="gone" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
