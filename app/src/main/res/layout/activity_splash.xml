<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="@string/app_name"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/versionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:textColor="@color/gray"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/loadingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/loading"
        android:textSize="30sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/mainGroup"
        android:layout_width="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="sessionInformation, statusHeader, statusInformation, statisticsHeader, statisticsInformation"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/sessionInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/header"
        app:layout_constraintEnd_toEndOf="@id/header"
        app:layout_constraintTop_toBottomOf="@id/header">

        <TextView
            android:id="@+id/deviceIdLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="@string/id_label"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/deviceIdBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="italic"
            android:text="@string/id_error"
            android:textSize="18sp"
            android:paddingRight="20dp" />

        <TextView
            android:id="@+id/usernameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="@string/username_label"
            android:textSize="18sp"
            android:paddingLeft="20dp" />

        <TextView
            android:id="@+id/usernameBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="italic"
            android:text="@string/username_error"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/statusHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:text="@string/status_header"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sessionInformation" />

    <LinearLayout
        android:id="@+id/statusInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/header"
        app:layout_constraintEnd_toEndOf="@id/header"
        app:layout_constraintTop_toBottomOf="@id/statusHeader">

        <TextView
            android:id="@+id/internetConnectionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/internet_status"
            android:textColor="@color/alert_yellow"
            android:textStyle="italic"
            android:textSize="20sp"
            android:paddingRight="50dp" />

        <TextView
            android:id="@+id/serverConnectionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/server_status"
            android:textColor="@color/alert_yellow"
            android:textStyle="italic"
            android:textSize="20sp"
            android:paddingLeft="50dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/statisticsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/statistics_header"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusInformation" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/statisticsInformation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statisticsHeader"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/promptsProgressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prompts_completed"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/sectionNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            android:paddingTop="15dp"
            android:paddingEnd="8dp"/>

        <TextView
            android:id="@+id/completedAndTotalPromptsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ratio"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/sectionNameText"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/tutorialProgressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tutorial_mode"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/sectionNameText"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/totalProgressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_progress"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/promptsProgressText"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/totalProgressCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ratio"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/promptsProgressText"
            app:layout_constraintStart_toEndOf="@id/guideline"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/recordingsProgressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_recordings"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/totalProgressText"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/recordingCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/counter"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/totalProgressText"
            app:layout_constraintStart_toEndOf="@id/guideline"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/recordingTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_time"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/recordingsProgressText"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/recordingTimeParsedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/counter"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/recordingsProgressText"
            app:layout_constraintStart_toEndOf="@id/guideline"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/sessionCounterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_sessions"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/recordingTimeText"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/sessionCounterBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/counter"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/recordingTimeText"
            app:layout_constraintStart_toEndOf="@id/guideline"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/sectionsCompletedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sections_completed"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/sessionCounterText"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            android:paddingTop="15dp" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/sectionsCompletedLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            app:layout_constraintTop_toBottomOf="@id/sessionCounterText"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="15dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/uploadProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="169dp"
        android:layout_height="20dp"
        android:layout_marginTop="32dp"
        android:indeterminate="false"
        android:max="100"
        android:min="0"
        android:visibility="gone"
        android:progressDrawable="@drawable/progress_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statisticsInformation" />

    <Button
        android:id="@+id/switchPromptsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/switch_prompts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/uploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cardview_dark_background"
        android:textColor="@color/white"
        android:text="@string/upload_button"
        android:textSize="24sp"
        android:layout_marginBottom="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/startButton"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:text="@string/start_button"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/uploadButton" />


    <TextView
        android:id="@+id/tutorialModeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="@string/tutorial_mode"
        android:textSize="32sp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/exitTutorialModeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="24dp"
        android:text="Exit Tutorial"
        android:enabled="true"
        android:visibility="gone"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/button_color"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
