<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/promptLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/margins"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/promptView"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/rectangle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></View>

        <TextView
            android:id="@+id/promptText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="Prompt Text."
            android:textColor="@android:color/black"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="@+id/promptView"
            app:layout_constraintTop_toTopOf="@+id/promptView" />

        <ImageView
            android:id="@+id/promptImage"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:adjustViewBounds="true"
            android:scaleType="fitEnd"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/promptView"
            app:layout_constraintTop_toTopOf="parent" />

        <VideoView
            android:id="@+id/promptVideo"
            android:layout_width="wrap_content"
            android:layout_height="128dp"
            android:visibility="visible"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintEnd_toEndOf="@+id/promptView"
            app:layout_constraintTop_toBottomOf="@+id/promptView"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/fullScreenButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/full_screen_button"
            android:tint="@color/white"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/originalScreenButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/minimize_screen_button"
            android:tint="@color/white"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/fullScreenButton" />

        <ImageButton
            android:id="@+id/splitScreenButton"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@android:color/transparent"
            android:rotation="90"
            android:src="@drawable/split_screen_button"
            android:tint="@color/white"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/originalScreenButton" />

        <ImageButton
            android:id="@+id/disableSplitScreenButton"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/disable_split_screen_button"
            android:tint="@color/white"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/splitScreenButton" />

        <ImageButton
            android:id="@+id/changeScreenSizeButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/full_screen_button"
            android:tint="@color/white"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/disableSplitScreenButton" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/promptBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--    <androidx.constraintlayout.widget.Barrier-->
    <!--        android:id="@+id/rightBarrier"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        app:barrierDirection="start"-->
    <!--        app:constraint_referenced_ids="promptImage,promptVideo" />-->

</androidx.constraintlayout.widget.ConstraintLayout>